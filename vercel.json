{
	"headers": [
		{
			"source": "/sitemap.xml",
			"headers": [
				{"key": "Content-Type", "value": "application/xml"},
				{"key": "Cache-Control", "value": "no-cache"}
			]
		},
		{
			"source": "/robots.txt",
			"headers": [{"key": "Content-Type", "value": "text/plain"}]
		}
	],
	"rewrites": [
		{
			"source": "/sitemap.xml",
			"destination": "/api/sitemap.xml"
		},
		{
			"source": "/robots.txt",
			"destination": "/api/robots.txt"
		}
	]
}
